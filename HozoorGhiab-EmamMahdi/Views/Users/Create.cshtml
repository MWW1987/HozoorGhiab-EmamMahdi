@model User

@{
    ViewData["Title"] = "ایجاد طلبه جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-right">ایجاد طلبه جدید</h2>


<hr />
<div class="row" style="direction: rtl">
    <div class="col-md-4 ">
        <form asp-action="Create" class="text-right">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی طلبه را وارد کنید" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" placeholder="کد طلبه را وارد کنید" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tell" class="control-label"></label>
                <input asp-for="Tell" class="form-control" placeholder="شماره تلفن طلبه را واردکنید"/>
                <span asp-validation-for="Tell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" placeholder="آدرس طلبه را وارد کنید"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Users">برگشت به لیست طلاب</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
